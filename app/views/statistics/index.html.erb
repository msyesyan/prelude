<table class="table table-striped">
	<tr>
		<td>时间</td><td>每日流量</td>
	</tr>
	<% @statistics.each do |statistic| %>
	<tr>
		<td><%= Time.new(statistic.year,statistic.month,statistic.day).strftime("%Y年%m月%d日") %></td>
		<td><%= network_size(statistic.size) %></td>
	</tr>
	<% end %>
</table>

<nav>
	<%= paginate(@statistics, :theme => 'twitter-bootstrap') if !@statistics.empty? %>
</nav>
