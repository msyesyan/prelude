<!DOCTYPE html>
<html>
<head>
	<title>Prelude</title>
	<meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0;" name="viewport" />
	<%= stylesheet_link_tag    "application", :media => "all" %>
	<%= javascript_include_tag "application" %>
	<%= csrf_meta_tags %>
</head>
<body>

<div class="navbar navbar-fixed-top">
	<div class="navbar-inner">
		<div class="container">
			<a class="brand" href="#">Prelude</a>

			<% if user_signed_in? %>
			<ul class="nav">
				<li class="dropdown">
					<a href="#" class="dropdown-toggle" data-toggle="dropdown">
						用户<b class="caret"></b>
					</a>
					<ul class="dropdown-menu">
						<li class=""><%= link_to '个人信息', user_path(current_user) %></li>
						<li class=""><%= link_to '用户列表', user_index_path %></li>
						<li class=""><a href="#">流量查询</a></li>
					</ul>
				</li>
			</ul>

			<ul class="nav pull-right">
				<li class=""><a href="#"><%= current_user.email %></a></li> 
				<li class=""><%= link_to '注销', destroy_user_session_path, :method => 'delete' %></li>
			</ul>
			<% end %>
		</div>
	</div>
</div>

<div class="container">
	<% flash.each do |code| %>
	<div class="alert alert-success fade in">
		<a class="close" data-dismiss="alert">×</a>
		<%= flash[code[0]] %>
	</div>
	<% end %>

	<%= yield %>
</div>

</body>
</html>
